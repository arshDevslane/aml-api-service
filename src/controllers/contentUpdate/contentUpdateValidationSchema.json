{
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "enum": ["api.content.update"]
    },
    "ver": {
      "type": "string"
    },
    "ts": {
      "type": "string"
    },
    "params": {
      "type": "object",
      "properties": {
        "msgid": {
          "type": "string"
        }
      },
      "required": ["msgid"],
      "additionalProperties": false
    },
    "request": {
      "type": "object",
      "properties": {
        "name": {
          "type": "object",
          "description": "The name of the content in multiple languages.",
          "additionalProperties": {
            "type": "string"
          },
          "minProperties": 1
        },
        "description": {
          "type": "object",
          "description": "The description of the content in multiple languages.",
          "additionalProperties": {
            "type": "string"
          },
          "minProperties": 1
        },
        "x_id": {
          "type": "string"
        },
        "repository_id": {
          "type": "string"
        },
        "board_id": {
          "type": "string"
        },
        "class_id": {
          "type": "string"
        },
        "l1_skill_id": {
          "type": "string"
        },
        "l2_skill_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "l3_skill_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "gradient": {
          "type": "string"
        },
        "sub_skill_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "media": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "fileName": {
                "type": "string"
              },
              "mediaType": {
                "type": "string"
              },
              "mimeType": {
                "type": "string"
              },
              "src": {
                "type": "string"
              },
              "language": {
                "type": "string",
                "enum": ["en", "kn", "hi", "ta", "te"],
                "description": "must be one of the allowed languages"
              }
            },
            "required": ["fileName", "mediaType", "mimeType", "src"],
            "additionalProperties": false
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    }
  },

  "required": ["id", "ver", "ts", "params", "request"],
  "additionalProperties": false
}
